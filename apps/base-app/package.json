    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.8.0",
    "happy-dom": "^7.8.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "start-server-and-test": "^1.15.2",
    "terser": "^5.16.1",
    "typescript": "~4.9.4",
    "vite": "^4.0.2",
    "vitest": "^0.26.1",
    "vue-template-compiler": "^2.7.14",
    "vue-tsc": "^0.40.13"
