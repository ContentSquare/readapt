    "@readapt/text-engine": "^1.6.0",
    "@readapt/visual-engine": "^1.6.0",
    "bootstrap": "~4.6.2",
    "bootstrap-vue": "~2.23.1",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "popper.js": "^1.16.1",
    "vue": "~2.7.14",
    "vue-i18n": "~8.28.2",
    "vue-i18n-composable": "^2.0.0",
    "vue-router": "~3.6.5",
    "vue-sanitize": "^0.2.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "sass": "^1.57.1",
