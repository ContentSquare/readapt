{
	"name": "safari-extension",
	"version": "1.8.3",
	"private": true,
	"scripts": {
		"build": "yarn update-version && yarn build-project",
    "test": "echo 'no test yet'",
		"package": "yarn update-version && yarn package-project && scripts/package-release",
		"build-project": "xcodebuild -project ./Readapt.xcodeproj -scheme 'Readapt (macOS)' DSTROOT='./dist' clean build",
		"package-project": "xcodebuild -project ./Readapt.xcodeproj -scheme 'Readapt (macOS)' DSTROOT='./dist' clean build archive",
    "update-version": "node scripts/update-version"
	}
}
