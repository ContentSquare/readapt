{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
    ],
    "types": [
      "chrome", // TODO: Remove later (because base-app must not be concerned about chrome specifics)
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "vueCompilerOptions": { "target": 2.7 }
}
