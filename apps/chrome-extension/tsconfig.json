{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "strictFunctionTypes": false, /* Disable for now because of this problem: https://github.com/vuejs/create-vue/issues/185 */
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "chrome"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@extension/*": [
        "src-extension/*"
      ],
      "@readapt/*": [
        "../../packages/*/src"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src-extension/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
