{
  "name": "readapt",
  "version": "1.0.0",
  "description": "Readapt by Contentsquare",
  "private": true,
  "scripts": {
    "build-ms-word-addin": "yarn build-deps && yarn workspace ms-word-addin build",
    "build-chrome-extension": "yarn build-browser",
    "build-safari-extension": "yarn build-browser && yarn workspace safari-extension build",
    "package-chrome-extension": "yarn workspace chrome-extension package",
    "package-safari-extension": "yarn workspace safari-extension package",
    "test": "yarn workspaces run test",
    "build-browser": "yarn build-deps && yarn workspace chrome-extension build",
    "build-deps": "lerna run build --stream --include-dependencies --scope=@readapt/* ",
    "lint": "eslint --ext .ts,.vue packages/* apps/chrome-extension apps/ms-word-addin"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.2",
    "@parcel/transformer-typescript-types": "^2.8.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.22",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.0",
    "lerna": "^6.4.1",
    "parcel": "^2.8.2",
    "prettier": "^2.4.1",
    "rollup": "^2.66.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "shx": "^0.3.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "~4.9.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "tslib": "^2.3.1",
    "unplugin-auto-import": "^0.14.2",
    "vue": "~2.7.14",
    "vue-i18n": "~8.28.2",
    "vuex": "~3.6.2"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  }
}
